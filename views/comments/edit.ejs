<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 class="text-center">EDIT Comment</h1>
        <div class="new-form">
            <form action="/campgrounds/<%=campgroundId%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>" placeholder="Comment..." autofocus="autofocus">
                </div>
                <div class="form-group new-form-submit">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds/<%=campgroundId%>">Go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>