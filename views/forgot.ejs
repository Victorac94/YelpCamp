<% include ./partials/header %>

<div class="container">
    <div class="new-form">
        <form action="/forgot" method="POST">
            <legend class="text-center">Forgot Password</legend>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="email" id="email" autofocus="autofocus" placeholder="Email address">
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Reset Password">
            </div>
        </form>
        <p class="warning-text">*Note: This function does not work with Outlook services</p>
    </div>
</div>

<% include ./partials/footer %>