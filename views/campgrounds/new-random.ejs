<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 class="text-center">ADD A NEW CAMPGROUND</h1>
        <div class="new-form">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" value="<%=random.name%>" name="name" id="name" placeholder="Name of campground">
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input class="form-control" type="number" value="<%=random.price%>" name="price" id="price" placeholder="Price per night" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <label for="image" class="warning-text">We recommend to change the image url</label>
                    <input class="form-control" type="text" value="<%=random.img%>" name="image" id="image" placeholder="Image url">
                </div>
                <div class="form-group">
                    <label for="name">Description</label>
                    <input class="form-control" type="text" value="<%=random.desc%>" name="description" id="description" placeholder="Add a description of the place">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" value="<%=random.place%>" name="location" id="location" placeholder="Yosemite National Park, CA">
                </div>
                <div class="form-group new-form-submit">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds/new/random" class="btn btn-lg btn-success btn-block">Generate Random Data</a>
            <p class="warning-text">*Note: Random Generated Campgrounds are always changing their image.</p>
            <p class="warning-text">*Note: All Random Generated Campgrounds have (unless manually changed) the same image displayed on the /campgrounds page</p>
            
            <a href="/campgrounds">Go back</a>
        </div>
    </div>
</div>

<script>
    function activatePlacesSearch() {
        var input = document.getElementById("location");
        var autocomplete = new google.maps.places.Autocomplete(input);
    }
</script>
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBVKm2X8aVSyjGt1-A5k8Xqp3DKDzdcu2E&libraries=places&callback=activatePlacesSearch"></script>

