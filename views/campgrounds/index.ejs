<% include ../partials/header %>

    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to YelpCamp!</h1>
                <p>View our hand-picked campgrounds from all over the world</p>
                 <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a New Campground</a>
            </div>
        </header>
        
        <div class="row" style="display: flex; flex-wrap: wrap">
            <% if (list.length === 0) { %>
                <div class="col-md-12">
                    <h3 class="text-center">No results matched the query. Try again or <a href="/campgrounds">View all campgrounds</a></h3>
                </div>
            <% } else { %>
            <% list.forEach(function(camp) { %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail text-center">
                        <img src="<%= camp.image %>">
                        <div class="caption">
                            <h4> <%= camp.name %> </h4>
                        </div>
                        <p>
                            <a href="/campgrounds/<%=camp._id%>" class="btn btn-primary">+ info</a>
                        </p>
                    </div>
                </div>
            <% }); %>
            <% } %>
        </div>
    </div>

<% include ../partials/footer %>